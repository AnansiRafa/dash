<p id="notice"><%= notice %></p>

<h1>Your Feedback</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><B>From: <%= feedback.teacher.user.name %></td></b>
        <td><%= feedback.body %></td>
        <td><i>Posted: <%= feedback.created_at.strftime('%a %b %d, %Y at %r') %></i></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback', new_feedback_path %>
