<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grade</th>
      <th>School year</th>
      <th>Semester</th>
      <th>Period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @course.name %></td>
      <td><%= @course.grade ? @course.grade : "N/A" %></td>
      <td><%= @course.school_year %></td>
      <td><%= @course.semester %></td>
      <td><%= @course.period %></td>
    </tr>
  </tbody>
</table>

<h3>Students</h3>
<ul>
<% @course.enrollments.where(role_id:1).each do |e| %>
<li><b><%=User.find(e.user_id).name %></b> | <%= link_to 'Post Feedback', new_feedback_path(teacher_id: @course.enrollments.where(role_id:2), student_id: e.id) %> | <%= link_to 'send a message', new_message_path(receiver_id: e.user_id) %>
</li>
<% end %>
</ul>

<h3>Feed</h3>
<% @course.posts.map do |p| %>
<ul>
  <li><%= p.body %></li>
</ul>
  <% end %>

  <%= render "posts/new" %>

  <%= link_to 'Edit', edit_course_path(@course) %> |

  <%= link_to 'Back', courses_path %>
