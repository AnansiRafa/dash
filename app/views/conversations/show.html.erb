<h4>Chatting with <%= @conversation.with(current_user).name %></h4>

<div id="conversation-main">
  <div id="conversation-body">
    <%= render @conversation.messages %>
  </div>

  <%= form_for @message, :html=> { class: 'browser-default' }  do |f| %>
    <%= hidden_field_tag 'conversation_id', @conversation.id %>
    <%= f.text_area :body, placeholder: 'Your message here...' %>

    <%= f.submit %>
  <% end %>

</div>
