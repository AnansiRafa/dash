<p id="notice"><%= notice %></p>
<%= @conversation.subject %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @conversation.messages.each do |m| %>
      <tr>
        <td><b><%= m.body %></b></td>
        <td><%= link_to 'Show', m %></td>
        <td><%= link_to 'Delete Message', conversation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Edit', edit_conversation_path(@conversation) %>
<%= link_to 'Back', conversations_path %>
